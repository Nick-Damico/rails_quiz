<div class="border-b border-gray-800 mb-6">
  <%= render "shared/back_button", path: :back %>
</div>

<%= banner_heading do %>
  <h3 class="text-xl text-center font-semibold">
    <%= @quiz.title %>
    <br>
    Question Preview
  </h3>
<% end %>

<section class="w-full max-w-xl mx-auto mt-10 border border-gray-500 rounded">
  <div class="flex h-auto justify-end border-b border-gray-500">
    <%= link_to edit_quiz_question_path(@quiz, @question), title: 'Edit Question', class: 'inline-block w-auto p-1 cursor-pointer' do %>
      <%= render "icons/pencil" %>
    <% end %>
  </div>

  <h2 class="text-center py-3 bg-gray-600">
    <%= @question.content %>
  </h2>

  <ul class="flex flex-col">
    <li class="p-2 py-3 border-t border-gray-500 hover:bg-blue-400 cursor-pointer">A: First Answer</li>
    <li class="p-2 py-3 border-t border-gray-500 hover:bg-blue-400 cursor-pointer">B: First Answer</li>
    <li class="p-2 py-3 border-t border-gray-500 hover:bg-blue-400 cursor-pointer">C: First Answer</li>
  </ul>
</section>