<div class="mt-10 mx-auto w-full max-w-sm">
  <div class="border border-blue-600 rounded-md px-4 pt-6 pb-4 mb-4">
    <%= form_with model: [question, choice] do |f| %>
      <%= f.hidden_field :question_id, value: question.id %>

      <h2 class="uppercase text-xl text-center font-xl border-b border-gray-500 pb-2">
        <%= choice.persisted? ? "Edit" : "Create" %> Choice
      </h2>

      <%= render "form_field", choice_form: f %>

      <div class="flex items-center mb-4 actions">
        <%= f.submit class: "text-center w-full bg-green-700 hover:bg-green-600 text-white font-semibold uppercase py-2 px-4 rounded focus:outline-none focus:shadow-outline actions cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
