<%
  app_data = {
    correct: 30,
    incorrect: 5
  }
%>
<div>
  <header class="flex items-center p-4 mb-4 bg-gray-900 text-2xl">
    <h2>
      Flashcard Deck Summary:<br/>
      <%= @user_deck.deck.title %>
    </h2>
    <dl class="ml-auto font-thin">
      <dt>Completed On</dt>
      <dt class="text-right">Mar 13 2025</dt>
    </dl>
  </header>
  <div class="flex gap-4">
    <div class="flex flex-col w-1/4 h-64 p-4 bg-gray-900 rounded-lg">
      <h3 class="uppercase mb-4 text-lg border-b-2 border-gray-800">Number of Cards Reviewed</h3>
      <div class="flex items-center justify-center h-full text-5xl font-thin">
        03 / 28
      </div>
    </div>
    <div class="flex flex-col w-1/4 h-64 p-4 bg-gray-900 rounded-lg">
      <h3 class="uppercase mb-4 text-lg border-b-2 border-gray-800">Total Time taken</h3>
      <div class="flex items-center justify-center h-full text-5xl font-thin">
        1min 20secs
      </div>
    </div>
    <div class="flex flex-col w-2/4 p-4 bg-gray-900 rounded-lg min-h-64">
      <h3 class="upcase mb-4 text-lg border-b-2 border-gray-800">Outcomes of Review</h3>
      <div class="flex items-center justify-center h-full text-5xl font-thin">
        <%= column_chart app_data, colors: ['#10B981', '#EF4444'] %>
      </div>
    </div>
  </div>
</div>