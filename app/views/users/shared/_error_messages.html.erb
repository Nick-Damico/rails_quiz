<% if resource.errors.any? %>
  <div
    class="absolute left-0 flex py-2 px-4 w-full mb-4 text-sm rounded top-0 <%= flash_class("alert") %>"
    data-turbo-cache="false"
    data-controller="flash"
    >
    <div class="flex flex-col justify-center">
      <p>
        <%= I18n.t("errors.messages.not_saved",
                 count: resource.errors.count,
                 resource: resource.class.model_name.human.downcase)
       %>
      </p>
    </div>
    <button 
          type="button"
          class="flex ml-auto items-center justify-center rounded-full top-0 w-8 h-8 p-2 right-0 text-xl <%= flash_button_class("alert") %>"
          data-action="click->flash#onClick"
      >
      <span class="font-bold text-white">&times;</span>
    </button>
  </div>
<% end %>
