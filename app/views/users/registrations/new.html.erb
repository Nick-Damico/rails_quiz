<%= render "shared/devise_errors" %>

<div class="mt-16 mx-auto w-full max-w-xs">
  <div class="bg-gray-800 shadow-md rounded-md px-8 pt-6 pb-8 mb-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <h2 class="text-center text-2xl font-bold mb-4 ">
        Sign Up
      </h2>

      <div class="mb-6 field">
        <%= f.label :email, class: "text-white text-xs font-semibold uppercase mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-6 field">
        <%= f.label :username, class: "text-white text-xs font-semibold uppercase mb-2" %>
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      
      <div class="mb-6 field">
        <%= f.label :password, class: "text-white text-xs font-semibold uppercase mb-2" %>
        <% if @minimum_password_length %>
          <em class="text-white text-sm">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-6 field">
        <%= f.label :password_confirmation, "Password Confirmation", class: "text-white text-xs font-semibold uppercase mb-2" %>
        <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="flex items-center mb-4 actions">
        <%= f.submit "Sign Up", class: "text-center w-full bg-green-700 hover:bg-green-600 text-white font-semibold uppercase py-2 px-4 rounded focus:outline-none focus:shadow-outline actions cursor-pointer" %>
      </div>

    <% end %>
    <p class="text-center text-sm text-white">Or <a class="font-bold" href=<%= new_user_session_path %>>Login</a></p>
  </div>
  <p class="text-center text-gray-500 text-xs">
    &copy;<%= Time.now.year %> QuizIt. All rights reserved.
  </p>
</div>
