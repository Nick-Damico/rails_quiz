<%= render "shared/breadcrumbs" %>
<div class="w-full max-w-xl mx-auto mt-10">
  <div class="w-full max-w-xl mx-auto mt-10 border border-gray-500 rounded">
    <section>
      <h2 class="py-2 text-xl text-center uppercase border-b border-gray-500 font-xl">
        <%= study_plan.persisted? ? "Edit" : "Create" %> Study Plan
      </h2>
      <%= form_with model: study_plan, url: url, class: "px-2" do |f| %>
        <div class="mb-4 field">
          <%= f.label :name, class: "text-white text-xs font-semibold uppercase mb-2" %>
          <%= f.text_field :name, placeholder: "e.g. Intro to Computer Science", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:bg-white focus:outline-none focus:shadow-outline" %>
          <%= display_field_error(study_plan, :name) %>
        </div>
        <div class="mb-4 field">
          <%= f.label :description, class: "text-white text-xs font-semibold uppercase mb-2" %>
          <%= f.text_area :description, rows: 8, placeholder: "Briefly describe your study goals, topics, or scheduleâ€¦", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          <%= display_field_error(study_plan, :description) %>
        </div>
        <div class="flex items-center mb-4 actions">
          <%= f.submit class: "btn btn-success text-center w-full  text-white font-semibold uppercase py-2 px-4 rounded focus:outline-none focus:shadow-outline actions cursor-pointer" %>
        </div>
      <% end %>
    </section>
  </div>
</div>