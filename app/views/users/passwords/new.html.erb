<div class="w-full max-w-md mx-auto mt-16">
  <div class="px-8 pt-6 pb-8 mb-4 bg-gray-800 rounded-md shadow-md">
    <h2 class="text-2xl font-light">Forgot your password</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="mt-6 mb-4 field">
        <%= f.label :email, class: "text-white text-xs font-semibold uppercase mb-2" %>
        <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        <%= display_field_error(resource, :email) %>
      </div>
      <div class="flex items-center mb-4 actions">
        <%= f.submit "Send reset instructions", class: "text-center w-full bg-green-700 hover:bg-green-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline actions cursor-pointer" %>
      </div>
    <% end %>
    <p class="text-sm text-center text-white">
      <%= link_to "Sign up", new_user_registration_path, class: "font-bold" %>
    </p>
    <%= render "shared/horizontal_or" %>
    <p class="text-sm text-center text-white">
      <%= link_to "Log in", new_user_session_path, class: "font-bold" %>
    </p>
  </div>
</div>
