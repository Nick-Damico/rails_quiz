<tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
  <th scope="row" class="py-2 px-3 font-medium text-gray-900 whitespace-nowrap dark:text-white">
    <%= quiz.title %>
  </th>
  <td class="py-2 px-3">
    <%= quiz.description %>
  </td>
  <td class="py-2 px-3 text-right">
    <div class="inline-flex border border-gray-400">
      <%= link_to 'view', quiz_path(quiz, author_id: author), class: 'bg-primary text-white px-2 py-2' %>
      <%= link_to 'destroy', quiz_path(quiz, author_id: author),
        data: {
          turbo_confirm: 'Are you sure you want to delete this Quiz? This action is permanent!',
          turbo_method: :delete
        },
        class: 'bg-alert text-white px-2 py-2' %>
    </div>
  </td>
</tr>
