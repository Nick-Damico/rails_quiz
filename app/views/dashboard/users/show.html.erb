<div class="flex gap-4 p-4 border border-gray-500 rounded-xl">
  <div class="flex flex-col items-center w-1/3 p-4 bg-gray-950 border-r border-gray-500">
    <div class="box-content flex items-center justify-center p-4 bg-gray-800 rounded-full h-28 w-28 mb-2">
      profile picture
    </div>
    <div class="text-center">
      <h3 class="text-lg text-white font-semibold">
        <%= @user.username %>
      </h3>
      <p class="text-sm text-gray-400">
        <%= @user.email %>
      </p>
    </div>
  </div>
  <div class="w-2/3">
    <section>
      <h2 class="text-lg mb-4">
        General Information
      </h2>
      <%= render "general_information", user: @user %>
    </section>
    <hr class="mb-4 border-gray-500">
    <section>
      <h2 class="text-lg mb-4">
        Account Security
      </h2>
      <div>
        <%= render "users/passwords/form", user: @user %>
      </div>
    </section>
  </div>
</div>
