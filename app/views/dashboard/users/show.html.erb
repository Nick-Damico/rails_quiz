<div class="flex flex-col gap-4 p-4 border border-gray-500 md:flex-row rounded-xl">
  <div class="flex flex-col items-center w-full p-4 border-b border-r-0 border-gray-500 md:w-1/3 bg-gray-950 md:border-r md:border-b-0">
    <div id="user_profile_upload" class="box-content flex items-center justify-center p-4 mb-2 bg-gray-800 rounded-full h-28 w-28">
      <div class="p-4 border-2 border-gray-500 border-dashed rounded-md cursor-pointer"
        data-controller="users--avatar-uploader" 
        data-avatar-uploader-target="dropzone"
        data-action="dragover->avatar-upload#dragOver drop->avatar-uploader#drop click->users--avatar-uploader#onBrowse">
        <input type="file" accept="image/*" class="hidden" data-users--avatar-uploader-target="fileInput" data-action="change->avatar-upload#previewImage">
        <div data-avatar-uploader-target="preview">
          <%= render_icon "camera", klass: "size-12" %>
          <p class="text-gray-500 sr-only">Click or drag an image here to upload</p>
        </div>
      </div>
    </div>
    <div class="text-center">
      <h3 class="text-lg font-semibold text-white">
        <%= @user.username %>
      </h3>
      <p class="text-sm text-gray-400">
        <%= @user.email %>
      </p>
    </div>
    <%= form_with model: @user, url: dashboard_user_path, class: 'flex flex-col w-full' do |f| %>
      <div class="flex flex-col mt-10 border-t border-gray-500">
        <div class="my-4 field">
          <%= f.label :bio, class: "text-white text-xs font-semibold uppercase mb-2" %>
          <%= f.text_area :bio, rows: 8, placeholder: "Example: Assess your understanding of the bones that form the human body. This quiz covers bone anatomy, functions, and key structural features.", class: "flex grow resize-none shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          <%= display_field_error(@user, :bio) %>
        </div>
        <div class="flex items-center actions">
          <%= f.submit class: "text-center btn-success text-white font-semibold uppercase py-2 px-4 rounded focus:outline-none focus:shadow-outline actions cursor-pointer" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="w-full md:w-2/3">
    <section>
      <h2 class="mb-4 text-lg">
        General Information
      </h2>
      <%= render "dashboard/users/general_information", user: @user %>
    </section>
    <hr class="mb-4 border-gray-500">
    <section>
      <h2 class="mb-4 text-lg">
        Account Security
      </h2>
      <div>
        <%= render "users/passwords/form", user: @user %>
      </div>
    </section>
  </div>
</div>
