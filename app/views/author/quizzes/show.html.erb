<%= render "shared/breadcrumbs" %>

<div class="flex flex-col md:flex-row space-y-2 md:space-y-0 md:space-x-2">
  <section class="inline-flex flex-col self-start w-full md:w-1/3 bg-gray-800 rounded pt-4 pb-2 px-2 min-h-[400px]">
    <%= link_to edit_author_quiz_path(@quiz), class: "flex btn-sm rounded items-center ml-auto mb-2 hover:btn-primary transition ease-in-out duration-500" do %>
      <%= render "icons/pencil", klass: "size-5 mr-1" %> Edit
    <% end %>

    <div class="inline-flex items-center bg-blue-500 px-4 p-1">
      <h2 class="text-3xl font-semi-bold">
        <%= @quiz.title %> <br>
      </h2>
    </div>

    <div class="font-semibold ml-4 my-2">
      <p>AUTHOR:</p>
      <p class="italic font-light ml-3"><%= @author.username %></p>
    </div>

    <div class="ml-4 mb-2 font-semibold">
      <p class="">DESCRIPTION:</p>
      <p class="italic font-light ml-3"><%= @quiz.description %></p>
    </div>

    <div class="flex justify-between space-x-4 border-t border-gray-500 mt-6">
      <p class="flex-1 uppercase font-light text-xl text-center p-1">
        <span class="text-2xl"><%= sprintf("%02d" % @quiz.time_to_complete) %></span><br>
        Minutes
      </p>

      <p class="flex-1 uppercase font-light text-xl text-center border-l border-gray-500 p-1">
        <span class="text-2xl"><%= sprintf("%02d" % @quiz.questions.count) %></span><br>
        Questions
      </p>
    </div>
  </section>

  <section class="w-full flex flex-col md:w-2/3 bg-gray-800 rounded py-4 px-2">
    <%= link_to new_quiz_question_path(@quiz), class: "flex btn rounded ml-auto hover:btn-success transition ease-in-out duration-500" do %>
      <%= render "icons/plus" %>
      <span class="ml-2">Add Question</span>
    <% end %>

    <div class="flex flex-col md:inline-flex md:flex-row justify-between items-center py-2 mb-2 border-b border-gray-500">
      <h2 class="text-2xl mb-1 md:mb-0">
        Questions
      </h2>

      <form class="w-full md:w-auto">
        <label for="search" class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-white">Search</label>
          <div class="relative">
            <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z" />
                </svg>
            </div>

            <%= search_field_tag :search, nil,
              autocomplete: 'on',
              class: "block w-full p-2 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500",
              placeholder: "Search" %>
        </div>
      </form>
    </div>

    <div class="max-h-[650px] overflow-y-scroll">
      <ul id="questionsList" class="flex flex-col gap-1 pr-6">
        <%= render partial: "question", collection: @quiz.questions %>
      </ul>
    </div>
  </section>
</div>
