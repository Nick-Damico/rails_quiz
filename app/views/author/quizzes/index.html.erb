<%= render "shared/breadcrumbs" %>

<section>
  <div class="flex">
    <h2 class="text-2xl font-semibold mb-4">Quizzes</h2>
    <%= link_to new_author_quiz_path(@quiz), class: "flex ml-auto pb-2" do %>
      <%= render "icons/plus" %>
      <span class="ml-2">Create Quiz</span>
    <% end %>
  </div>

  <div class="relative overflow-x-auto">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <tr>
          <th scope="col" class="px-3 py-3">
              Title
          </th>
          <th scope="col" class="px-3 py-3">
              Description
          </th>
          <th scope="col" class="px-3 py-3 text-right">
              Actions
          </th>
        </tr>
      </thead>
      <tbody>
        <% @quizzes.each do |quiz| %>
          <%= render 'quiz', author: @author, quiz: %>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
